!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title study-app
    %meta{:content => "width=device-width,initial-scale=1", :name => "viewport"}/
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    .header
      .f-container
        %p.app_name
          = link_to 'AdStudy', root_path

        - if user_signed_in?
          %div.dropdown
            %button#dropdown__btn.dropdown__btn
              - if current_user&.avatar&.present?
                = image_tag current_user.avatar.to_s, class: 'circle_icon'      
              - else
                = image_tag asset_path('default-avatar.png'), class: 'header_avatar'
            %div.dropdown__body
              %ul.dropdown__list
                %li.dropdown__item
                  = link_to 'マイページ', profile_path(current_user)
                %li.dropdown__item
                  = link_to 'ログアウト', destroy_user_session_path, data: { method: 'delete' }
          .header_btn
            %div
              %i.fas.fa-pen-square.fa-lg
              = link_to '投稿する', new_article_path
          
        - else
          = link_to 'ログイン', new_user_session_path, class: 'header_loginBtn'
          = link_to '新規登録', new_user_registration_path, class: 'header_registrationBtn'

    - if flash.present?
      .flash
        - flash.each do |key, value|
          %div{:class => key}= value
    = yield
