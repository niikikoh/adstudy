.article#article-show{data: {article_id: @article.id}}

  %header
    %p= "#{@article.author_name}が#{@article.display_created_at}に投稿"
    // そのうちif文で更新も追加するかも
    // アバター画像からプロフィールに飛びたい

    - if user_signed_in? && current_user.present?
      = link_to '編集する', edit_article_path(@article)
      = link_to '削除する', article_path(@article), data: { method: 'delete', confirm: '本当に削除してもいいですか？'}
  
  %body
    %h2.article_title
      = @article&.title
    
    .article_content
      = @article&.content 
