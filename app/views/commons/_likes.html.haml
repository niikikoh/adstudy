- if current_user.already_liked?(article)
	= link_to article_like_path(article), method: :delete, remote: true do
		= image_tag 'active-heart', class: 'article_heart'
- else
	= link_to article_like_path(article), method: :post, remote: true do
		= image_tag 'non-active-heart', class: 'article_heart'