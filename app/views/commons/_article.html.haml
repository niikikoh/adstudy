%article
  = link_to article_path(article) do
    .article_card
      %header
        %p= "#{article.author_name}が#{article.display_created_at}に投稿"
        = form_tag article_payments_path(article) do
          %script.stripe-button{"data-amount" => article.price, "data-currency" => "jpy", "data-description" => "クレジット決済", "data-key" => Rails.configuration.stripe[:publishable_key], "data-name" => "<haml_loud", :src => "https://checkout.stripe.com/checkout.js"}
            :cdata
            \"\#{article.name}を購入"
      %body
        .card
          %h2.card_title
            = article&.title